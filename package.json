{
  "private": true,
  "name": "@bottender/workspace",
  "version": "1.5.5",
  "description": "A framework for building conversational user interfaces.",
  "license": "MIT",
  "homepage": "https://bottender.js.org/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yoctol/bottender.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc --build tsconfig.build.json",
    "build:clean": "tsc --build tsconfig.build.json --clean",
    "build:watch": "yarn build --watch",
    "ci:release": "lerna publish from-package --yes",
    "ci:versionup:major": "lerna version major --no-push --no-git-tag-version --yes && yarn commit-version",
    "ci:versionup:minor": "lerna version minor --no-push --no-git-tag-version --yes && yarn commit-version",
    "ci:versionup:patch": "lerna version patch --no-push --no-git-tag-version --yes && yarn commit-version",
    "clean": "git clean -dfqX -- ./node_modules **/{dist,node_modules}/ ./packages/*/tsconfig*tsbuildinfo ./.yarn/install-state.gz",
    "commit-version": "git add . && git commit -m \"chore(release): v`node -p 'require(\"./lerna.json\").version'`\"",
    "postinstall": "yarn build",
    "lint": "eslint packages examples --ext=js,ts",
    "lint:fix": "yarn lint:fix:md && yarn lint:fix:ts",
    "lint:fix:md": "prettier --write **/*.md",
    "lint:fix:ts": "yarn lint --fix",
    "lint:staged": "lint-staged",
    "lint:website": "eslint website --ext=js,ts,tsx",
    "prepare": "husky",
    "release": "lerna publish from-package",
    "test": "yarn build && yarn lint && yarn testonly",
    "testonly": "jest",
    "testonly:cov": "jest --coverage",
    "testonly:watch": "jest --watch",
    "version": "cp README.md packages/bottender",
    "versionup": "lerna version"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/prettier": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "axios-mock-adapter": "^1.22.0",
    "chalk": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-yoctol": "^0.26.3",
    "eslint-config-yoctol-base": "^0.24.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "glob": "^10.3.10",
    "husky": "^9.0.6",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lerna": "^8.1.2",
    "lint-staged": "^15.2.0",
    "micromatch": "^4.0.5",
    "mkdirp": "^3.0.1",
    "mockdate": "^3.0.5",
    "nock": "^13.5.1",
    "once": "^1.4.0",
    "prettier": "^3.2.4",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": ">=8"
  },
  "packageManager": "yarn@4.1.1"
}
